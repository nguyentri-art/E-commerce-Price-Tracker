{
    "manifest_version": 3,
    "name": "E-commerce Price Tracker",
    "version": "1.01",
    "description": "Compare prices some stuff at your shopping online. A Production of Little Dream Studio !",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.example.com/*", "*://*.amazon.com/*", "*://*.shopee.com/*", "*://*.lazada.com/*"], 
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-16.jpg"
        }
    }
}